{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5",
    "types": ["reflect-metadata"],
    "noImplicitAny": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
